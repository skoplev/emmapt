{
	"id": "bdmerge",
	"instances": 1,
	"cpus": 1,
	"mem": 1024,
	"container": {
		"type": "DOCKER",
		"docker": {
			"image": "146.203.54.165:5000/bdmerge:latest",
			"forcePullImage": true,
			"network": "BRIDGE",
			"portMappings": [
				{
					"containerPort": 5000,
					"hostPort": 0,
					"protocol": "tcp"
				}
			]
		},
		"volumes": [
		    {
		      "containerPath": "/bdmerge/dtree",
		      "hostPath": "/hadoop/hdfs-mount/apps/bdmerge/dtree",
		      "mode": "RW"
		    }
		]
	},
	"labels": {
		"public": "true"
	}
}